                                                    <Button x:Name="btnEmpleadoID" HorizontalAlignment="Right" Padding="0" Height="30" Click="btnEmpleadoID_Click">
                                                        <materialDesign:PackIcon Kind="Magnify" Padding="0" Height="30" Width="25" />
