<UserControl x:Class="Sadora.CustomElements.UscComboBoxGeneral"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="root"
             mc:Ignorable="d" Focusable="True" GotFocus="Root_GotFocus" IsTabStop="True">
    <Grid>
        <Border TextElement.FontSize="15" Margin="{Binding MarginBorder, ElementName=root}" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" BorderThickness="2 0 0 2" CornerRadius="5">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="10 5 0 0" Text="{Binding Title, ElementName=root}" FontWeight="Bold"/>

                <ComboBox x:Name="MainCBX" materialDesign:ComboBoxAssist.ClassicMode = "true" Text="{Binding Text, ElementName=root}" ItemsSource="{Binding Items, ElementName=root}" Padding="0" Height="{Binding HeightLabel, ElementName=root}" 
                          BorderThickness="1" BorderBrush="{x:Null}" Background="#4CEDEDED" KeyUp="MainCBX_KeyUp">
                </ComboBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
