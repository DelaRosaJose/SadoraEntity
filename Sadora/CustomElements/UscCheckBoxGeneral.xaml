<UserControl x:Class="Sadora.CustomElements.UscCheckBoxGeneral"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="root"
             mc:Ignorable="d" Focusable="True" GotFocus="root_GotFocus" IsTabStop="True">
    <Grid>
        <Border HorizontalAlignment="Right" Padding="5" TextElement.FontSize="15" Margin="{Binding MarginBorder, ElementName=root}" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" BorderThickness="2" CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="MainCheck" IsChecked="{Binding IsChecked, ElementName=root}" materialDesign:CheckBoxAssist.CheckBoxSize="25"/>
                <TextBlock VerticalAlignment="Center" Text="{Binding Title, ElementName=root}" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
