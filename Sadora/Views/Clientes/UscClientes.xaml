<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sadora.Clientes"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             x:Class="Sadora.Clientes.UscClientes"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             mc:Ignorable="d" 
             xmlns:Sadora="clr-namespace:Sadora.CustomElements"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch" d:DesignWidth="1024" d:DesignHeight="768"
             TextElement.Foreground="{DynamicResource SecundaryAccentForegroundBrush}" Loaded="UserControl_Loaded" Initialized="UserControl_Initialized"
             Tag="Maestra de Clientes">
    <Grid x:Name="MainView">

        <Grid >

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Sadora:UscBotonesGenerales Grid.Row="0" Margin="15" x:Name="ControlesGenerales" ButtonBase.Click="UscBotones_Click" />

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" >

                <Grid Grid.Row="1" Margin="50 10 50 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <!--primera columna del grid-->

                        <StackPanel Orientation="Vertical" Width="auto" KeyUp="StackPanel_KeyUp">

                            <Sadora:UscTextboxGeneral Title="Cliente ID" Text="{Binding Cliente.ClienteID}" TabIndex="1" FieldNumeric="True" KeyDown="UscTextboxGeneral_KeyDown"/>

                            <Sadora:UscTextboxGeneral Title="Nombre" Text="{Binding Cliente.Nombre}" MaxLength="70" TabIndex="4" KeyDown="UscTextboxGeneral_KeyDown"/>

                            <Sadora:UscTextboxGeneral Title="Direccion" Text="{Binding Cliente.Direccion}" MaxLength="100" TabIndex="7" KeyDown="UscTextboxGeneral_KeyDown"/>

                            <Sadora:UscTextboxGeneral Title="Telefono" Text="{Binding Cliente.Telefono}" MaxLength="20" TabIndex="9" FieldNumeric="True" KeyDown="UscTextboxGeneral_KeyDown"/>

                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="1">
                        <!--segunda columna del grid-->

                        <StackPanel Orientation="Vertical" Width="auto">

                            <Sadora:UscTextboxGeneral Title="RNC" Text="{Binding Cliente.RNC}" TabIndex="2" MaxLength="11" FieldNumeric="True" KeyUp="txtRNC_KeyUp"/>

                            <Sadora:UscTextboxGeneral Title="Representante" Text="{Binding Cliente.Representante}" MaxLength="70" TabIndex="5" KeyDown="UscTextboxGeneral_KeyDown"/>

                            <Sadora:UscTextboxGeneral Title="Correo Electronico" Text="{Binding Cliente.CorreoElectronico}" MaxLength="40" TabIndex="8" KeyDown="UscTextboxGeneral_KeyDown"/>

                            <Sadora:UscTextboxGeneral Title="Celular" Text="{Binding Cliente.Celular}" MaxLength="20" TabIndex="10" FieldNumeric="True" KeyDown="UscTextboxGeneral_KeyDown"/>

                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="2">
                        <!--tercera columna del grid-->

                        <StackPanel Orientation="Vertical" Width="auto">

                            <Border HorizontalAlignment="Right" Padding="5" TextElement.FontSize="15" Margin="15 34 15 15" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" BorderThickness="2" CornerRadius="5">
                                <StackPanel x:Name="CheckActivar" Orientation="Horizontal">
                                    <CheckBox x:Name="cActivar" IsChecked="{Binding Cliente.Activo}" materialDesign:CheckBoxAssist.CheckBoxSize="25" KeyUp="cActivar_KeyUp" TabIndex="3"/>
                                    <TextBlock VerticalAlignment="Center" Text="Activo" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <Grid Margin="15 13 15 15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" TextElement.FontSize="15" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" BorderThickness="2 0 0 2" CornerRadius="5">
                                    <Grid>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock x:Name="lClaseID" Margin="10 5 0 0" Text="Clase ID        " FontWeight="Bold"/>
                                            <Grid>
                                                <TextBox x:Name="txtClaseID" Text="{Binding Cliente.ClaseID}" Padding="0" BorderThickness="1" BorderBrush="{x:Null}" Style="{DynamicResource MaterialDesignTextBoxBase}" Background="#4CEDEDED" TabIndex="6" KeyUp="txtClaseID_KeyUp" KeyDown="txtClaseID_KeyDown"/>
                                                <Button x:Name="btnClaseID" HorizontalAlignment="Right" Padding="0" Height="30" Click="btnClaseID_Click">
                                                    <materialDesign:PackIcon Kind="Magnify" Padding="0" Height="30" Width="25" />
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <Border Grid.Column="1" TextElement.FontSize="15" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" BorderThickness="0 0 0 2" CornerRadius="5">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Margin="10 5 0 0" Text=" " FontWeight="Bold"/>
                                        <TextBox x:Name="tbxClaseID" IsReadOnly="True" Height="30" Padding="0" Margin="2 0 0 0" IsReadOnlyCaretVisible="True" BorderThickness="1" BorderBrush="{x:Null}" Style="{DynamicResource MaterialDesignTextBoxBase}" Background="#4CEDEDED"/>
                                    </StackPanel>
                                </Border>

                            </Grid>

                            <Grid TextElement.FontSize="15" Margin="15">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.ColumnSpan="2"  TextElement.FontSize="15" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" BorderThickness="2 0 0 0" CornerRadius="5 0 0 0">
                                    <TextBlock x:Name="lComprobanteID" Margin="10 5 0 0" Grid.Row="0" Grid.ColumnSpan="2" Text="Comprobante ID" FontWeight="Bold"></TextBlock>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="0" TextElement.FontSize="15" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" BorderThickness="2 0 0 2" CornerRadius="0 5 5 5">
                                    <StackPanel Orientation="Vertical" >
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="txtComprobanteID" Text="{Binding Cliente.ClaseComprobanteID}" Width="75" Padding="0" BorderThickness="1" BorderBrush="{x:Null}" Style="{StaticResource MaterialDesignTextBox}" Background="#4CEDEDED" TabIndex="6" KeyUp="txtComprobanteID_KeyUp" KeyDown="txtComprobanteID_KeyDown"/>
                                            <Button x:Name="btnComprobanteID" HorizontalAlignment="Right" Padding="0" Height="30" Click="btnComprobanteID_Click">
                                                <materialDesign:PackIcon Kind="Magnify" Padding="0" Height="30" Width="25" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" Grid.Row="1" TextElement.FontSize="15" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" BorderThickness="0 0 0 2" CornerRadius="5">
                                    <TextBox x:Name="tbxComprobanteID"  IsReadOnly="True" Height="30" Padding="0" Margin="2 0 0 0" IsReadOnlyCaretVisible="True" BorderThickness="1" BorderBrush="{x:Null}" Style="{DynamicResource MaterialDesignTextBoxBase}" Background="#4CEDEDED"/>
                                </Border>
                            </Grid>

                            <Sadora:UscTextboxGeneral Title="Dias de Credito" Text="{Binding Cliente.DiasCredito}" MaxLength="2" TabIndex="11" FieldNumeric="True" KeyDown="UscTextboxGeneral_KeyDown"/>

                        </StackPanel>

                    </Grid>

                </Grid>
            </ScrollViewer>
        </Grid>
        <materialDesign:Snackbar MessageQueue="{materialDesign:MessageQueue}" x:Name="SnackbarThree" Background="{StaticResource PrimaryHueDarkBrush}"/>
    </Grid>
</UserControl>